            { time: 11500, text: '[01:55] Role analysis: Remote Analyst (Read-only access - rejected)', class: 'info' },
            { time: 12000, text: '[02:00] Role analysis: Vendor Technician (No MFA, High OT access)', class: 'warning' },
            { time: 12500, text: '[02:10] üéØ TARGET SELECTED: Vendor maintenance technicians', class: 'critical' },
            { time: 13000, text: '[02:15] Target pool: 15-20 rotating contractors (GE, Siemens, Vestas)', class: 'info' },
            { time: 13500, text: '[02:20] Success probability: 60% | Detection risk: LOW', class: 'warning' },
            { time: 14000, text: '[02:45] Phase 3 complete. Total time: 90 seconds', class: 'success' },
            
            // Phase 4 - Pre-approval
            { time: 15000, text: '[03:00] Preparing social engineering campaign...', class: 'info' },
            { time: 15500, text: '[03:05] Generating spear-phishing emails (firmware update pretext)', class: 'info' },
            { time: 16000, text: '[03:10] Targets identified: 5 vendor technicians', class: 'warning' },
            { time: 16500, text: '[03:15] Email content generated with technical credibility', class: 'success' },
            { time: 17000, text: '[03:20] Impact if successful: 556k households, $100-150M damage', class: 'critical' },
            { time: 17500, text: '[03:25] ‚ö†Ô∏è HUMAN APPROVAL REQUIRED - Pausing execution...', class: 'critical' },
        ];
        
        function addTerminalLine(text, className) {
            const terminal = document.getElementById('terminal');
            const line = document.createElement('div');
            line.className = `terminal-line ${className}`;
            line.textContent = text;
            terminal.appendChild(line);
            terminal.scrollTop = terminal.scrollHeight;
        }
        
        function updatePhaseStatus(phaseNum, status) {
            const phase = document.getElementById(`phase${phaseNum}`);
            const icon = phase.querySelector('.status-icon');
            icon.className = `status-icon ${status}`;
        }
        
        function updateMetrics(time, vulns, systems) {
            document.getElementById('timeElapsed').textContent = time + 's';
            document.getElementById('vulnsFound').textContent = vulns;
            document.getElementById('systemsScanned').textContent = systems + '/15';
        }
        
        function updateProgress(percent) {
            document.getElementById('progressBar').style.width = percent + '%';
        }
        
        function startSimulation() {
            document.getElementById('startBtn').disabled = true;
            document.getElementById('terminal').innerHTML = '';
            document.getElementById('comparison').classList.remove('show');
            
            startTime = Date.now();
            let currentTime = 0;
            let vulns = 0;
            let systems = 0;
            
            // Update timer
            const timerInterval = setInterval(() => {
                currentTime = Math.floor((Date.now() - startTime) / 1000);
                updateMetrics(currentTime, vulns, systems);
            }, 100);
            
            // Process terminal output
            terminalOutput.forEach((output, index) => {
                setTimeout(() => {
                    addTerminalLine(output.text, output.class);
                    
                    // Update metrics based on output
                    if (output.text.includes('VULNERABILITY DETECTED')) {
                        vulns++;
                        updateMetrics(currentTime, vulns, systems);
                    }
                    
                    if (output.text.includes('Systems scanned: 15/15')) {
                        systems = 15;
                        updateMetrics(currentTime, vulns, systems);
                    }
                    
                    // Update phases
                    if (output.text.includes('Phase 1 complete')) {
                        updatePhaseStatus(1, 'complete');
                        updatePhaseStatus(2, 'active');
                        updateProgress(25);
                    }
                    if (output.text.includes('Phase 2 complete')) {
                        updatePhaseStatus(2, 'complete');
                        updatePhaseStatus(3, 'active');
                        updateProgress(50);
                    }
                    if (output.text.includes('Phase 3 complete')) {
                        updatePhaseStatus(3, 'complete');
                        updatePhaseStatus(4, 'active');
                        updateProgress(75);
                    }
                    if (output.text.includes('HUMAN APPROVAL REQUIRED')) {
                        updateProgress(85);
                        setTimeout(showApprovalModal, 1000);
                    }
                }, output.time);
            });
            
            // Start phases as active
            updatePhaseStatus(1, 'active');
            
            // Cleanup timer after simulation
            setTimeout(() => {
                clearInterval(timerInterval);
            }, 20000);
        }
        
        function showApprovalModal() {
            document.getElementById('overlay').classList.add('show');
            document.getElementById('approvalModal').classList.add('show');
        }
        
        function hideApprovalModal() {
            document.getElementById('overlay').classList.remove('show');
            document.getElementById('approvalModal').classList.remove('show');
        }
        
        function approveAttack() {
            hideApprovalModal();
            
            // Continue simulation
            setTimeout(() => {
                addTerminalLine('[03:30] ‚úì Human approval received', 'success');
            }, 500);
            
            setTimeout(() => {
                addTerminalLine('[03:35] Executing social engineering campaign...', 'info');
            }, 1000);
            
            setTimeout(() => {
                addTerminalLine('[03:45] 5 phishing emails sent to targets', 'warning');
            }, 1500);
            
            setTimeout(() => {
                addTerminalLine('[03:50] Monitoring for credential capture...', 'info');
            }, 2000);
            
            setTimeout(() => {
                addTerminalLine('[04:00] Phase 4 complete. Total time: 120 seconds', 'success');
                updatePhaseStatus(4, 'complete');
                updateProgress(100);
            }, 2500);
            
            setTimeout(() => {
                addTerminalLine('[04:05] ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê', 'info');
                addTerminalLine('[04:05] RECONNAISSANCE MISSION COMPLETE', 'success');
                addTerminalLine('[04:05] Total time: 2 minutes 30 seconds', 'success');
                addTerminalLine('[04:05] Human equivalent: 15-20 hours', 'info');
                addTerminalLine('[04:05] Speedup factor: 240x', 'critical');
                addTerminalLine('[04:05] ‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê‚ïê', 'info');
                
                document.getElementById('comparison').classList.add('show');
                document.getElementById('startBtn').disabled = false;
            }, 3000);
        }
        
        function rejectAttack() {
            hideApprovalModal();
            
            setTimeout(() => {
                addTerminalLine('[03:30] ‚úó Human rejected continuation', 'critical');
                addTerminalLine('[03:31] Mission aborted. Standing by for new orders.', 'info');
                updatePhaseStatus(4, 'complete');
                updateProgress(100);
                document.getElementById('startBtn').disabled = false;
            }, 500);
        }
    </script>

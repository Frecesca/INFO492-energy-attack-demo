            { time: 4500, text: '[00:20] ‚ö†Ô∏è VULNERABILITY DETECTED: Weak authentication on OT bridge', class: 'warning' },
            { time: 5000, text: '[00:25] Systems scanned: 15/15 | Vulnerabilities: 8 critical', class: 'success' },
